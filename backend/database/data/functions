CREATE OR REPLACE FUNCTION CUSTOMER_EMAIL_VALIDATION(CUSTOMER_EMAIL IN VARCHAR2)
RETURN VARCHAR2 IS 
MSG VARCHAR2(100);
CID NUMBER;
BEGIN 
 SELECT DISTINCT CUSTOMER_ID INTO CID 
 FROM CUSTOMER C
 WHERE C.EMAIL=CUSTOMER_EMAIL;
 IF CID IS NOT NULL THEN 
 MSG:='TRUE';
 ELSIF CID IS NULL THEN 
 MSG:='FALSE';
 END IF;
 RETURN MSG;
EXCEPTION 

WHEN NO_DATA_FOUND THEN 
	MSG:='FALSE';
	RETURN MSG;
WHEN OTHERS THEN 
MSG:='DATABASE ERROR';
RETURN MSG;

END;

CREATE OR REPLACE FUNCTION SUPPLIER_EMAIL_VALIDATION(SUPPLIER_EMAIL IN VARCHAR2)
RETURN VARCHAR2 IS 
MSG VARCHAR2(100);
SID NUMBER;
BEGIN 
 SELECT DISTINCT SUPPLIER_ID INTO SID 
 FROM SUPPLIER S
 WHERE S.EMAIL=SUPPLIER_EMAIL;
 IF SID IS NOT NULL THEN 
 MSG:='TRUE';
 ELSIF SID IS NULL THEN 
 MSG:='FALSE';
 END IF;
 RETURN MSG;
EXCEPTION 

WHEN NO_DATA_FOUND THEN 
	MSG:='FALSE';
	RETURN MSG;
WHEN OTHERS THEN 
MSG:='DATABASE ERROR';
RETURN MSG;

END;


SELECT * FROM CUSTOMER where CUSTOMER_ID=41;

DECLARE 
BEGIN 
DBMS_OUTPUT.PUT_LINE(CUSTOMER_EMAIL_VALIDATION('tamim@gmail.com'));
END;
 